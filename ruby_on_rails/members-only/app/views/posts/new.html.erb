<% if @post.errors.any? %>
	<% @post.errors.full_messages.each do |msg| %>
		<%= msg %>
		<br/>
	<% end %>
	<hr/>
<% end %>

<%= form_for @post do |f| %>
	<%= f.label :title %>
	<br/>
	<%= f.text_field :title %>

	<br/>

	<%= f.label :body %>
	<br/>
	<%= f.text_area :body %>

	<br/>

	<%= f.submit "Create post" %>
<% end %>